{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@store/*": [
        "src/app/store/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@modal/*": [
        "src/app/modal/*"
      ],
      "@env/*": [
        "src/environments/*"
      ]
    }
  }
//  "angularCompilerOptions": {
//    "enableIvy": true
//  }
}
